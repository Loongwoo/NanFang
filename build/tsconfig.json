{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "jsx": "preserve",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noEmit": false,
    "removeComments": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/main/*"],
  "extends": "./node_modules/electron-webpack/tsconfig-base.json"
}
